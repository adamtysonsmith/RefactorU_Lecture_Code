extends layout

block content
    h1 Hello Boulder!
    p.my-para.blue
        // Reference the counter key in our object that was passed via render() using #{key}
        a(href="#") I am a paragraph.  The current count is #{counter}
    
    ul.nav.green.float-left
        li#first-item.nav-li
            a(href="#") 1st List Item
        li#second-item.nav-li
            a(href="#") 2nd List Item
        li#third-item.nav-li
            a(href="#") 3rd List Item

    div.text
        | I am content inside the parent div

block otherContent
    // Another way to inject data is using the tag=
    h2= counter
    
    h3 Best Foods Ever.
    // But this sucks, because we can loop!
    //ul
        li= foods[0].name
        li= foods[1].name
        li= foods[2].name

    ul
        for fooditem in foods
            if fooditem.name === 'pears'
                li yuck
            else
