    // Here is how you write javascript in jade
    // Simply include a dash - at the beginning
    -var myVar = 'Beans';
    -console.log(myVar)
    
    
    
    // Jade mixins
    // Declare the mixin
    mixin insertSpan(arg)
        span #{arg}
        // This means if there is a block after the mixin, display it
        if block
            block
            
    // Use the mixin!
    h1 This is a mixin that inserts a span: 
        +insertSpan(myVar)
    
